---
import { Image } from "astro:assets";
import iotcraft from "../../public/iotcraft.png";
---

<section class="text-[var(--white)] mt-12 md:mt-0" id="home">
  <div aria-hidden="true" class="relative inset-0 grid grid-cols-2 -space-x-52 opacity-40 dark:opacity-20">
    <div class="blur-[106px] h-56 bg-gradient-to-br from-primary to-purple-400 dark:from-blue-700"></div>
    <div class="blur-[106px] h-32 bg-gradient-to-r from-cyan-400 to-sky-300 dark:to-indigo-600"></div>
  </div>
  <div class="max-w-5xl mx-auto space-y-8 md:py-36 pb-14">
    <div class="text-left space-y-4">
      <p class="text-md md:text-lg text-[var(--white-icon)] shiny-white">
        TeaTech presents
      </p>
      <div class="flex flex-col lg:flex-row lg:items-center space-y-4 lg:space-y-0 lg:space-x-8 md:gap-4">
        <Image loading="eager"
          src={iotcraft}
          alt="IoTcraft Logo"
          class="h-12 w-12 md:h-16 md:w-16"
        />
        <h1 class="text-[var(--white)] text-5xl md:text-6xl font-medium text-pretty leading-none">
          <span class="text-[var(--sec)] shiny-sec">IoTcraft</span>
        </h1>
        <p class="text-md md:text-2xl text-[var(--white-icon)]">
